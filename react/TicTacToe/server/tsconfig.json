{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "allowJs": false,
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}